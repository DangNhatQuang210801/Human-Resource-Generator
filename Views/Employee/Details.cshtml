@model Employee

@{
    ViewBag.Title = "title";
}

<h4>Employee Detail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Number" class="control-label"></label>
            <input  class="form-control" disabled="disabled" value="@Model.Number"/>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input  class="form-control" disabled="disabled" value="@Model.Name"/>
        </div>
        <div class="form-group">
            <label asp-for="Department" class="control-label"></label>
            <input  class="form-control" disabled="disabled" value="@Model.Department"/>
        </div>
        <div class="form-group">
            <label asp-for="Birthday" class="control-label"></label>
            <input  class="form-control" disabled="disabled" value="@DateTime.Now.ToString(Model.Birthday.ToString())"/>
        </div>
        <div class="form-group">
            <label class="control-label">Training_Program</label>
            @foreach (var training in Model.EmployeeTrainings)
            {
                <input  class="form-control" disabled="disabled" value="@training.TrainingProgram.program_name - @training.TrainingProgram.program_description - @training.TrainingProgram.date_of_program.Date"/>
            }
                
        </div>
        
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>


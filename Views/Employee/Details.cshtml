@model Employee

@{
    ViewBag.Title = "title";
}

<h4>Employee Detail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Code" class="control-label"></label>
            <input  class="form-control" disabled="disabled" value="@Model.Code"/>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input  class="form-control" disabled="disabled" value="@Model.Name"/>
        </div>
        <div class="form-group">
            <label asp-for="Position" class="control-label"></label>
            <input  class="form-control" disabled="disabled" value="@Model.Position"/>
        </div>
        <div class="form-group">
            <label asp-for="DateOfBirth" class="control-label"></label>
            <input  class="form-control" disabled="disabled" value="@DateTime.Now.ToString(Model.DateOfBirth.ToString())"/>
        </div>
        <div class="form-group">
            <label class="control-label">Training_Program</label>
            @foreach (var training in Model.EmployeeTrainings)
            {
                <input  class="form-control" disabled="disabled" value="@training.TrainingProgram.Name - @training.TrainingProgram.Description - @training.TrainingProgram.CreatedAt.Date"/>
            }
                
        </div>
        
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>


@model EmployeeTraining
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add new employee</h2>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Employee.employee_number">Employee's number</label>
            <input asp-for="Employee.employee_number" class="form-control" />
            <span asp-validation-for="Employee.employee_number" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Employee.employee_name">Name</label>
            <input asp-for="Employee.employee_name" class="form-control" />
            <span asp-validation-for="Employee.employee_name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Employee.employee_department">Department</label>
            <input asp-for="Employee.employee_department" class="form-control" />
            <span asp-validation-for="Employee.employee_department" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Employee.date_of_birth">Birthday</label>
            <input asp-for="Employee.date_of_birth" type="date" class="form-control" />
            <span asp-validation-for="Employee.date_of_birth" class="text-danger"></span>
        </div>
        <div>
            <button type="submit" class="btn btn-primary" style="width:150px"><i class="bi bi-person-plus"></i> Create</button>
        <a asp-controller="Generator" asp-action="Index" class="btn btn-secondary" style="width:150px"><i class="bi bi-box-arrow-in-left"></i> Back</a>
        </div>
    </div>

</form>